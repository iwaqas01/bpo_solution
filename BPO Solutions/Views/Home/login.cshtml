<!-- END PAGE VENDOR JS-->
<!-- BEGIN MODERN JS-->
<script src="~/files/app-assets/js/core/app-menu.js" type="text/javascript"></script>
<script src="~/files/app-assets/js/core/app.js" type="text/javascript"></script>
<script src="~/files/app-assets/js/scripts/customizer.js" type="text/javascript"></script>
<!-- END MODERN JS-->
