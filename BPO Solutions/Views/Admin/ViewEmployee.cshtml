@model IEnumerable<BPO_Solutions.Employee>

@{
    ViewBag.Title = "ViewEmployee";
}




<section id="column">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Employee Records</h4>
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <ul class="list-inline mb-0">
                            <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                            <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                            <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                            <li><a data-action="close"><i class="ft-x"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-content collapse show">
                    <div class="card-body card-dashboard">
                        <table class="table table-striped table-bordered column-rendering">
                            <thead>
                                <tr>
                                    <th>
                                        Employee Name
                                    </th>
                                    <th>
                                        Father Name
                                    </th>
                                    <th>
                                        Phone Number
                                    </th>
                                    <th>
                                        Shift
                                    </th>
                                    <th></th>
                                </tr>

                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Emp_Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FatherName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CellNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Shift)
                                        </td>
                                        <td>
                                           
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>
                                        Employee Name
                                    </th>
                                    <th>
                                        Father Name
                                    </th>
                                    <th>
                                        Phone Number
                                    </th>
                                    <th>
                                        Shift
                                    </th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
